<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
    <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
    <% end %>
  </tr>
</table>
<br>
<table>
  <%= @cat.description %>
</table>

<br>
<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>
